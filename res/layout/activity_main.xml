<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                 
    <Button
        android:id="@+id/three"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5sp"
        android:text="@string/blank"
        android:textSize="70sp" />
            
    <Button
        android:id="@+id/two"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignTop="@id/three"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@id/three"
        android:text="@string/blank"
        android:textSize="70sp" />
           
    <Button
        android:id="@+id/one"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignTop="@id/two"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@id/two"
        android:padding="0sp"
        android:text="@string/blank"
        android:textSize="70sp" />
                       
    <Button
        android:id="@+id/six"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/three"
        android:layout_marginLeft="5sp"
        android:text="@string/blank"
        android:textSize="70sp" />
           
     <Button
         android:id="@+id/five"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:layout_alignTop="@id/six"
         android:layout_marginLeft="5sp"
         android:layout_toLeftOf="@id/six"
         android:text="@string/blank"
         android:textSize="70sp" />
           
    <Button
        android:id="@+id/four"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignTop="@id/five"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@id/five"
        android:text="@string/blank"
        android:textSize="70sp" />
           
    <Button
        android:id="@+id/nine"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/six"
        android:layout_marginLeft="5sp"
        android:text="@string/blank"
        android:textSize="70sp" />
           
     <Button
         android:id="@+id/eight"
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:layout_alignTop="@id/nine"
         android:layout_marginLeft="5sp"
         android:layout_toLeftOf="@id/nine"
         android:text="@string/blank"
         android:textSize="70sp" />
           
    <Button
        android:id="@+id/seven"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignTop="@id/eight"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@id/eight"
        android:text="@string/blank"
        android:textSize="70sp" />
    
    <TextView android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_below="@id/seven"
        android:layout_height="wrap_content"
        android:text="Use Menu to Start Game"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:textSize="20sp"/>
</RelativeLayout> 